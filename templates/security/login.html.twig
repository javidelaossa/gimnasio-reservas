{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger text-center" role="alert" id="alertaAdmin">
            {{ error }}
        </div>
    {% endif %}
    <div class="container vh-100">
        <div class="d-flex justify-content-center h-100">
            <div class="user_card">
                <div class="d-flex justify-content-center">
                    <div class="brand_logo_container">
                        <img src="https://i.postimg.cc/nLcMSpkT/gym.png" class="brand_logo" alt="Logo">
                    </div>
                </div>
                <div class="d-flex justify-content-center form_container">
                    <form method="post">
                        <div class="input-group mb-3">
                            <div class="input-group-append">

                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                                   class="form-control input_user" autocomplete="email" required autofocus
                                   placeholder="Correo electronico">
                            {#                            <input type="text" name="" class="form-control input_user" value="" placeholder="username"> #}
                        </div>
                        <div class="input-group mb-2">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input type="password" name="password" id="inputPassword" class="form-control input_pass"
                                   autocomplete="current-password" required placeholder="Contraseña">
                            {#                            <input type="password" name="" class="form-control input_pass" value="" placeholder="password"> #}
                        </div>
                        <div class="form-group">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" id="customControlInline">
                                <label class="custom-control-label" for="customControlInline">Recordarme</label>
                            </div>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        </div>
                        <div class="d-flex justify-content-center mt-3 login_container">
                            <button type="submit" name="button" class="btn login_btn">Iniciar sesión</button>
                        </div>
                    </form>
                </div>

                <div class="mt-4">
                    <div class="d-flex justify-content-center links">
                        ¿No tienes cuenta aún? <a href="{{ path ('app_register') }}" class="ml-2"> Registrarse</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script !src="">
        let alertaAdmin = document.getElementById('alertaAdmin');

        setTimeout(function () {
            alertaAdmin.remove();
        }, 5000);
    </script>




