{% extends 'base.html.twig' %}

{% block title %}Hello GimnasioController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <div class="row">
            <div class="col-6">hola</div>
            <div class="col-6">adios</div>
        </div>
        <button type="button" class="btn btn-lg btn-danger" data-bs-toggle="popover" title="Popover title"
                data-bs-content="And here's some amazing content. It's very engaging. Right?">Click to toggle popover
        </button>
        <h1>Hello {{ mensaje }}! âœ…</h1>
        {% for actividad in actividades %}
            <a href="reservasAct/{{ actividad.id }}">
                <p>{{ actividad.nombre }}</p>
                <p>{{ actividad.sala.nombre }}</p>
                <p>{{ actividad.hInicio|date('H:i:s') }}</p>
                <p>{{ actividad.hFin|date('H:i:s') }}</p>
                <img src="{{ asset('uploads/imagenes/') }}{{ actividad.imagen }}" alt="Logo">
            </a>
        {% endfor %}
    </div>
{% endblock %}
