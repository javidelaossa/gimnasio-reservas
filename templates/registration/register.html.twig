{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center align-items-center vh-100">

            {% if app.user %}
                <div class="mb-3">
                    Ya tienes la sesi√≥n iniciada {{ app.user.nombre }}, <a
                            href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}
            {{ form_start(registrationForm) }}
            <h1 class="h3 mb-3 font-weight-normal">Crear cuenta:</h1>
            <div class="row">
                <div class="col-12">
                    {{ form_row(registrationForm.nombre) }}
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    {{ form_row(registrationForm.email) }}
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    {{ form_row(registrationForm.plainPassword, {
                        label: 'Password'
                    }) }}
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    {{ form_row(registrationForm.agreeTerms) }}
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    {{ form_row(registrationForm.imagen) }}
                </div>
            </div>
            <div class="text-center">
                <button class="btn btn-lg btn-primary" type="submit">
                    Registrarse
                </button>
            </div>
        </div>
    </div>




