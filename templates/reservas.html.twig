{% extends 'base.html.twig' %}

{% block title %}Hello GimnasioController!{% endblock %}

{% block body %}
    <div class="example-wrapper">
        {{ form_start(form) }}
        <h1>Hello {{ controller_name }}! ✅</h1>
        <h1>{{ actividad.nombre }}✅</h1>
        <h1>{{ actividad.descrip }}✅</h1>
        <p>{{ actividad.sala.nombre }}</p>
        <p>{{ actividad.hinic|date('H:i:s') }}</p>
        <p>{{ actividad.hfin|date('H:i:s') }}</p>
        <img src="{{ asset('uploads/imagenes/') }}{{ actividad.imagen }}" alt="Logo">
        {{ form_end(form) }}
    </div>
{% endblock %}
